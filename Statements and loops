for item in range(1, 41, 1):
    if (item % 5 == 0) and (item % 7 == 0):
        print(item, "is divided by 5 and 7")
    if (item % 5 == 0):
        print(item, "is divided by 5")
    if (item % 7 == 0):
        print(item, "is divided by 7")
    if (item % 5 !=0) and (item % 7 !=0):
        print(item, " is not important")
